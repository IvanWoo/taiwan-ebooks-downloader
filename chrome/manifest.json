{
  "manifest_version": 2,
  "name": "Taiwan eBooks Downloader",
  "version": "0.0.7",
  "default_locale": "en",
  "description": "Download eBooks directly from Taiwan eBook Database (台湾华文电子书库)",
  "icons": {
    "16": "images/logo16.png",
    "32": "images/logo32.png",
    "48": "images/logo48.png",
    "128": "images/logo128.png"
  },
  "author": "Yifan Wu",
  "browser_action": {
    "default_title": "Taiwan eBooks Downloader"
  },
  "content_scripts": [
    {
      "js": [
        "js/jquery-3.2.1.min.js",
        "js/inject_on_book.js"
      ],
      "css": [
        "css/main.css"
      ],
      "matches": [
        "*://taiwanebook.ncl.edu.tw/*/book/*"
      ],
      "run_at": "document_idle"
    },
    {
      "js": [
        "js/jquery-3.2.1.min.js",
        "js/inject_on_reader.js"
      ],
      "css": [
        "css/main.css"
      ],
      "matches": [
        "*://taiwanebook.ncl.edu.tw/*/book/*/reader"
      ],
      "run_at": "document_idle"
    },
    {
      "js": [
        "js/jquery-3.2.1.min.js",
        "js/inject_on_search.js"
      ],
      "matches": [
        "*://taiwanebook.ncl.edu.tw/*/category/*",
        "*://taiwanebook.ncl.edu.tw/*/collection/*",
        "*://taiwanebook.ncl.edu.tw/*/time/*",
        "*://taiwanebook.ncl.edu.tw/*/search/*"
      ],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  }
}